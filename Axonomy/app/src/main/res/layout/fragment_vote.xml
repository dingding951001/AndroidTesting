<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="590dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="345dp"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_gravity="center"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/vote_container" >

            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/slider"
                android:layout_width="match_parent"
                android:layout_height="115dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="7dp"
                android:textColor="#ff333333"
                android:textSize="28sp"
                android:id="@+id/current_round"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_layout"
                android:id="@+id/current_timeline_card">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/current_activity_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_layout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/current_activity_title"
                        android:textColor="#ff333333"
                        android:textSize="20sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/pink_rounded_layout"
                        android:id="@+id/current_activity_label"
                        android:textColor="#ffff4c74"
                        android:textSize="12sp"
                        />
                </LinearLayout>

                <TableLayout
                    android:id="@+id/table_current_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"></TableLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/current_revenue_text_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_layout">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:id="@+id/current_revenue_text_title"
                    android:textColor="#ff333333"
                    android:textSize="20sp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/current_revenue_text_tip"
                    android:textColor="#ff333333"
                    android:textSize="16sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/current_revenue_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_layout">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/current_revenue_title"
                    android:textColor="#ff333333"
                    android:textSize="20sp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="7dp"
                    android:id="@+id/current_revenue_tip"
                    android:textColor="#ffa7a4b6"
                    android:textSize="16sp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="7dp">

                    <TextView
                        android:layout_width="155dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/current_vote_item_left"
                        android:textColor="#ffffffff"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:background="@drawable/current_revenue_left_background"
                        />

                    <TextView
                        android:layout_width="155dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/current_vote_item_right"
                        android:textColor="#ffffffff"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:background="@drawable/current_revenue_right_background"
                        />
                </LinearLayout>

                <View
                    android:background="#A7A4B6"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width = "match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical ="true"
                    android:layout_alignParentTop="true" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="0.9">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="AXON Consumed"
                            android:textColor="#ff333333"
                            android:textSize="16sp"
                            />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:id="@+id/current_vote_cost"
                            android:textColor="#ffff4c74"
                            android:textSize="16sp"
                            />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginTop="5.5dp"
                        android:src="@mipmap/more"
                        android:layout_weight="0.1"/>
                    
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/current_vote_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_layout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/vote_title"
                        android:textColor="#ff333333"
                        android:textSize="20sp"
                        />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:layout_gravity="top"
                        android:id="@+id/vote_count"
                        android:textColor="#ffa7a4b6"
                        android:textSize="16sp"
                        />
                </LinearLayout>

                <com.daimajia.slider.library.SliderLayout
                    android:id="@+id/current_vote_banner"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    />

                <TableLayout
                    android:id="@+id/table_layout_winner_projects"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"></TableLayout>

                <View
                    android:background="#A7A4B6"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width = "match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical ="true"
                    android:layout_alignParentTop="true" />

                <TableLayout
                    android:id="@+id/table_layout_vote_projects"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"></TableLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_layout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/current_balance_title"
                        android:textColor="#ff333333"
                        android:textSize="20sp"
                        />
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:gravity="right"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:id="@+id/current_balance_amount"
                            android:textColor="#ffff4c74"
                            android:textSize="16sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AXON"
                            android:textSize="16sp"
                            android:textColor="#333333"/>
                    </LinearLayout>
                </LinearLayout>
                
                <Button
                    android:layout_width="315dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/pink_round_button"
                    android:id="@+id/current_balance_button"
                    android:textColor="#ffffffff"
                    android:textSize="17sp"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/tvText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Previous Rounds"
                    android:textSize="12sp"
                    android:textColor="#A7A4B6"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toLeftOf="@id/tvText"
                    android:background="#A7A4B6"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:layout_toRightOf="@id/tvText"
                    android:background="#A7A4B6"
                    />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>